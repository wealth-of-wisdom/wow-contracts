{
    "name": "@wealth-of-wisdom/nft",
    "version": "1.0.0",
    "main": "hardhat.config.js",
    "license": "MIT",
    "scripts": {
        "test": "forge test",
        "build": "forge build",
        "coverage": "forge coverage",
        "coverage:lcov": "forge coverage --report lcov && genhtml -o report --branch-coverage lcov.info",
        "slither": "slither . --foundry-out-directory build",
        "aderyn": "aderyn .",
        "copy-contracts": "node scripts/copyContracts.js",
        "deploy:sale:ethereum": "npx hardhat run scripts/deployNftSale.js --network mainnet",
        "deploy:sale:sepolia": "npx hardhat run scripts/deployNftSale.js --network sepolia",
        "deploy:nft:ethereum": "npx hardhat run scripts/deployNft.js --network mainnet",
        "deploy:nft:sepolia": "npx hardhat run scripts/deployNft.js --network sepolia",
        "deploy:all:ethereum": "npx hardhat run scripts/deployNftAndNftSale.js --network mainnet",
        "deploy:all:sepolia": "npx hardhat run scripts/deployNftAndNftSale.js --network sepolia",
        "verify:ethereum": "npx hardhat verify --network mainnet",
        "verify:sepolia": "npx hardhat verify --network sepolia"
    },
    "dependencies": {
        "@openzeppelin/contracts": "5.0.1",
        "@openzeppelin/contracts-upgradeable": "^5.0.0",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
        "@nomicfoundation/hardhat-ethers": "^3.0.5",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
        "@nomicfoundation/hardhat-toolbox": "^4.0.0",
        "@nomicfoundation/hardhat-verify": "^2.0.3",
        "@openzeppelin/hardhat-upgrades": "^3.0.2",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "chai": "4.3.7",
        "ethers": "^6.10.0",
        "hardhat-gas-reporter": "^1.0.9",
        "prettier": "3.1.1",
        "prettier-plugin-solidity": "1.3.1",
        "solidity-coverage": "^0.8.5",
        "typechain": "^8.3.2"
    }
}
