{
    "name": "@wealth-of-wisdom/monorepo",
    "version": "1.0.0",
    "description": "Smart contracts of Wealth of Wisdom",
    "private": true,
    "npmClient": "yarn",
    "license": "MIT",
    "scripts": {
        "test": "npx hardhat test",
        "prepare": "husky install && npm run create-hooks",
        "pre-commit": "npx lint-staged",
        "create-hooks": "npx husky set .husky/pre-commit \"npm run pre-commit\""
    },
    "lint-staged": {
        "packages/**/contracts/**/*.sol": [
            "prettier --write",
            "solhint -f table --max-warnings 0"
        ]
    },
    "repository": "git+https://github.com/wealth-of-wisdom/wow-contracts.git",
    "author": "Alina <alina.d@superhow.org>",
    "bugs": {
        "url": "https://github.com/wealth-of-wisdom/wow-contracts/issues"
    },
    "homepage": "https://github.com/wealth-of-wisdom/wow-contracts#readme",
    "devDependencies": {
        "husky": "^8.0.3"
    },
    "dependencies": {
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "prettier-plugin-solidity": "^1.1.3"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    }
}
